<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCompanieActivity"
    android:padding="16dp">

    <TextView
        android:id="@+id/addCompanieHeadding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins"
        android:text="Agregar Empresa"
        android:textColor="@color/black"
        android:textSize="24sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_done_24"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/addCompanieHeadding"
        android:layout_marginEnd="6dp"/>

    <EditText
        android:id="@+id/companieName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Nombre de la Empresa"
        android:padding="12dp"
        android:textSize="20sp"
        android:layout_below="@id/addCompanieHeadding"
        android:background="@drawable/border"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:fontFamily="@font/poppins"/>

    <EditText
        android:id="@+id/webPageUri"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="URL de la Página web"
        android:padding="12dp"
        android:textSize="20sp"
        android:layout_below="@id/companieName"
        android:background="@drawable/border"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:fontFamily="@font/poppins"/>

    <EditText
        android:id="@+id/contactPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Teléfono de Contacto"
        android:padding="12dp"
        android:textSize="20sp"
        android:layout_below="@id/webPageUri"
        android:background="@drawable/border"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:fontFamily="@font/poppins"/>

    <EditText
        android:id="@+id/contactEmail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Email de contacto"
        android:padding="12dp"
        android:textSize="20sp"
        android:layout_below="@id/contactPhoneNumber"
        android:background="@drawable/border"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:fontFamily="@font/poppins"/>

    <EditText
        android:id="@+id/prodAndServ"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Productos y servicios"
        android:padding="12dp"
        android:textSize="20sp"
        android:layout_below="@id/contactEmail"
        android:background="@drawable/border"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:fontFamily="@font/poppins"/>

    <EditText
        android:id="@+id/classification"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Clasificación"
        android:padding="12dp"
        android:textSize="20sp"
        android:layout_below="@id/prodAndServ"
        android:background="@drawable/border"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:fontFamily="@font/poppins"/>

</RelativeLayout>